@page
@model zoowebproject.Pages.CartModel
@{
	ViewData["Title"] = "Cart";
}

<div class="cart-con">

	<form method="post" id="myForm">
		@foreach(var tickets in Model.CartTicketList)
		{
			<div class="cart-product">
@*				<img src="@tickets.Ticket.image" />*@
				<h1>@tickets.Ticket.name</h1>
				<h2>$: @tickets.Ticket.price</h2>
				<p>@tickets.Ticket.description</p>
				<p>Amount: @tickets.Amount</p>

			</div>
		}

		<button type="submit" value="submit">Check Out</button>
		<button type="reset" value="reset" id="resetButton">Cancel</button>
	</form>

	@section Scripts {
		<script>
			document.getElementById('resetButton').addEventListener('click', function (event) {
				event.preventDefault();
				document.getElementById('myForm').action = '@Url.Page("./MyPage", "OnPostReset")';
				document.getElementById('myForm').submit();
			});
		</script>
	}


</div>
